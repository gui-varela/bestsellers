{
  "openapi": "3.0.0",
  "info": {
    "title": "Sample API",
    "description": "Optional multiline or single-line description in [CommonMark](http://commonmark.org/help/) or HTML.",
    "version": "0.1.9"
  },
  "servers": [
    {
      "url": "https://u6i8wt2u55.execute-api.us-east-1.amazonaws.com",
      "description": "Optional server description, e.g. Main (production) server"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "Returns a list of all products.",
        "description": "All products returned by the database",
        "responses": {
          "200": {
            "description": "A JSON array of product names",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create one product in database",
        "requestBody": {
          "description": "Optional description in *Markdown*",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestProduct"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A JSON array of product names",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RequestProduct"
                },
                "example": {
                  "id": "abcd1234",
                  "name": "Calça de Moletom"
                }
              }
            }
          }
        }
      }
    },
    "/products/:id": {
      "get": {
        "summary": "Returns a especific product of all products.",
        "parameters": [
          {
            "in": "path",
            "name": "productId",
            "type": "string",
            "required": true,
            "description": "Numeric ID of the product to get."
          }
        ],
        "description": "A product of database by product ID",
        "responses": {
          "200": {
            "description": "A JSON object with product info",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RequestProduct": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID do produto"
          },
          "name": {
            "type": "string",
            "description": "Nome do produto"
          },
          "position": {
            "type": "number",
            "description": "Posição do produto no ranking dos mais vendidos"
          },
          "grade": {
            "type": "number",
            "description": "Nota média das avaliações do produto"
          },
          "price": {
            "type": "string",
            "description": "Preço do produto com R$ (por isso é uma string)"
          },
          "category": {
            "type": "string",
            "description": "Categoria do produto"
          }
        }
      }
    }
  }
}